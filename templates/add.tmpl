<!doctype html>
<html lang="en">
{{template "head" .}}
<body>
  {{template "header" .}}
  <div class="splash-container">
    <div class="splash">
      <p class="splash-subhead caps">Your link is:</p>
      <div class="pure-u-1 pure-md-1-4">
        <form class="pure-form">
        <input class="is-center" type="text" value="{{.}}" onClick="this.setSelectionRange(0, this.value.length)" readonly>
        </form>
      </div>
      <p>
        <a href="#submit" class="pure-button pure-button-primary caps">Do Another</a>
      </p>
    </div>
  </div>
  <div class="content-wrapper">
    {{template "submit" .}}
    {{template "webscale" .}}
    {{template "testimonials" .}}
    {{template "more" .}}
    {{template "footer" .}}
  </div>
</body>
</html>